{
    "name": "workflow",
    "private": true,
    "version": "0.0.1",
    "engines": {
        "node": ">=20.0.0 <21 || >=22.0.0 <23 || >=24.0.0 <25"
    },
    "main": "src/workflow.js",
    "bin": {
        "workflow": "src/workflow.js"
    },
    "scripts": {
        "postinstall": "run-script-os; build",
        "postinstall:win32": "if not exist .env copy .env.example .env else echo \"[INFO]: '.env' already exists!\"",
        "postinstall:darwin:linux": "[ ! -f .env ] && cp .env.example .env || echo \"[INFO]: '.env' already exists!\"",
        "workflow": "tsx src/workflow.ts"
    },
    "type": "module",
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@types/debug": "^4.1.12",
        "@types/node": "^24.1.0",
        "eslint": "^9.30.1",
        "globals": "^16.3.0",
        "run-script-os": "^1.1.6",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@srhenry/type-utils": "^0.5.2",
        "chalk": "^5.4.1",
        "commander": "^14.0.0",
        "debug": "^4.4.1",
        "dotenv": "^17.0.1",
        "tsx": "^4.20.3"
    }
}
